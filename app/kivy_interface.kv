PageManager:
    LoginPage:

<TextInput>:
    font_size: 0.55 * self.height
    size_hint: 0.6, 0.07
    background_normal: 'atlas://data/images/defaulttheme/textinput_active'
    border: (4, 4, 4, 4)
    multiline: False
    write_tab: False
    cursor_color: (44/255, 44/255, 44/255, 0.8)

<Button>:
    font_size: 0.48 * self.height
    color: 1, 1, 1, 1
    border: (4, 4, 4, 4)

<LoginPage>:
    name: "login"

    FloatLayout:
        Image:
            source: 'app/images/project-logo.png'
            size_hint_x: 0.8
            allow_stretch: True
            pos_hint: {'x': 0.105, 'top':1.2}

        TextInput:
            id: login
            pos_hint: {'x': 0.2, 'top':0.47}
            hint_text: 'idUFSC, Matr√≠cula, E-mail, CPF, ou Passaporte'

        TextInput:
            id: password
            pos_hint: {'x': 0.2, 'top':0.4}
            password: True
            hint_text: 'Senha'
        Button:
            id: login_btn
            size_hint: 0.6, 0.1
            background_color: (44/255, 44/255, 44/255, 0.8)
            pos_hint: {'x': 0.2, 'top':0.33}
            text: 'Entrar'
            on_release:
                app.login()

        Label:
            text: 'por: Gabriel Medeiros das Neves'
            font_size: 0.03 * self.height
            color: (44/255, 44/255, 44/255, 0.8)
            pos_hint: {'x': 0, 'top': 0.63}

        Label:
            text: '@nevesgmd'
            font_size: 0.03 * self.height
            color: (44/255, 44/255, 44/255, 0.8)
            pos_hint: {'x': 0, 'top': 0.6}
